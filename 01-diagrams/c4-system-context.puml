@startuml C4_SystemContext
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title System Context Diagram - SmartHomeHubDoeb

Person(homeowner, "Home Owner", "User who monitors and controls smart home devices, views energy costs, and configures automation schedules")

System(smarthome, "SmartHomeHubDoeb", "IoT Smart Home System deployed on Azure VM that provides real-time device control, time-based automation, and energy cost tracking")

System_Ext(iot_devices, "IoT Devices", "Smart sensors and actuators: temperature sensors, motion detectors, smart lights, heating controllers")

System_Ext(browser, "Web Browser", "Chrome, Firefox, Edge - accesses the real-time dashboard")

System_Ext(azure, "Microsoft Azure", "Cloud infrastructure hosting the VM in France Central region")

Rel(homeowner, browser, "Uses", "")
Rel(browser, smarthome, "Views dashboard, controls devices, monitors costs", "HTTP/WebSocket")
Rel(iot_devices, smarthome, "Sends telemetry data", "MQTT :1883")
Rel(smarthome, iot_devices, "Sends control commands", "MQTT :1883")
Rel(smarthome, azure, "Hosted on", "Azure VM")

@enduml

